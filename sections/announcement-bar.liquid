<div class="announcement__bar">
  <p>I'm present</p>
  {% for block in section.blocks %}
    <a href="{{ block.url }}">{{ block.text }}</a>
  {% endfor %}
</div>


{% style %}
  .announcement__bar{
    height: 45px;
    background: {{ section.settings.bg_color }};
    color: {{ section.settings.text_color }};
  }
{% endstyle %}


{% schema %}
{
  "name": "Announcement Bar",
  "max_blocks": 5,
  "settings": [
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#254430"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#fffff"
    }
  ],
  "blocks": [
    {
      "type": "announcement",
      "name": "Announcement",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Announcement Text",
          "default": "Free shipping on orders over $50"
        },
        {
          "type": "url",
          "id": "url",
          "label": "Link (Optional)"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Announcement Bar",
      "category": "Header"
    }
  ]
}
{% endschema %}
