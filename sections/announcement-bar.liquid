<div class="announcement__bar">
  {% for block in section.blocks %}
    <a href="{{ block.settings.announcement_url }}">{{ block.settings.announcement_text }}</a>
  {% endfor %}
</div>

<style>
  .announcement__bar {
      height: 45px;
      background: {{ section.settings.bg_color }};
      display: flex;
      justify-content: center;
      align-items: center;
      font-size: 1rem;
      font-weight: 500;
      text-transform: uppercase;
      line-height: 100%;
      letter-spacing: 1.5px;
    }

    .announcement__bar > a {
      color: {{ section.settings.text_color }};
      text-decoration: none;
    }

    @media (max-width: 56.25rem) {
      .announcement__bar{
        font-size: 0.875rem;
      }
    }

    @media (max-width: 37.5rem){
      .announcement__bar{
        font-size: 0.75rem;
      }
    }
</style>

{% schema %}
{
  "name": "Announcement Bar",
  "max_blocks": 5,
  "settings": [
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#254430"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#fff"
    }
  ],
  "blocks": [
    {
      "type": "announcement",
      "name": "Announcement",
      "settings": [
        {
          "type": "text",
          "id": "announcement_text",
          "label": "Announcement Text",
          "default": "Free shipping on orders over $50"
        },
        {
          "type": "url",
          "id": "announcement_url",
          "label": "Link (Optional)"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Announcement Bar",
      "category": "Header"
    }
  ]
}
{% endschema %}
