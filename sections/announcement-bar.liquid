<div class="announcement__bar">
  {% for block in section.blocks %}
    <div class="announcement">
      <a href="{{ block.settings.announcement_url }}">{{ block.settings.announcement_text }}</a>
    </div>
  {% endfor %}
</div>

{% style %}
  .announcement__bar {
      height: 45px;
      background: {{ section.settings.bg_color }};
      display: flex;
      justify-content: center;
      align-items: center;
      position: relative;
    }

    .announcement{
      position: absolute;
    }

    .announcement > a {
      color: {{ section.settings.text_color }};
      text-decoration: none;
      font-size: 1rem;
      font-weight: 500;
      text-transform: uppercase;
      line-height: 100%;
      letter-spacing: 1.5px;
    }

    @media (max-width: 56.25rem) {
      .announcement > a{
        font-size: 0.875rem;
      }
    }

    @media (max-width: 37.5rem){
      .announcement > a{
        font-size: 0.75rem;
      }
    }
{% endstyle %}

{% if section.settings.enable_autorotate and section.blocks.size > 1 %}
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      // Find our specific announcement bar and all of its items
      const container = document.getElementById('announcement-bar-{{ section.id }}');
      const announcements = container.querySelectorAll('.announcement-item');

      // If there's nothing to animate, stop the script
      if (announcements.length <= 1) {
        return;
      }

      let currentIndex = 0;
      // Show the first announcement immediately
      announcements[currentIndex].classList.add('is-active');

      // Set up a timer to switch announcements
      setInterval(() => {
        // Hide the current announcement
        announcements[currentIndex].classList.remove('is-active');

        // Move to the next one, or loop back to the start
        currentIndex = (currentIndex + 1) % announcements.length;

        // Show the new current announcement
        announcements[currentIndex].classList.add('is-active');
      }, {{ section.settings.slide_duration | times: 1000 }}); // Duration from theme settings
    });
  </script>
{% endif %}

{% schema %}
{
  "name": "Announcement Bar",
  "max_blocks": 5,
  "settings": [
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#254430"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#fff"
    },
    {
      "type": "header",
      "content": "Slideshow Settings"
    },
    {
      "type": "checkbox",
      "id": "enable_autorotate",
      "label": "Auto-rotate announcements",
      "default": true
    },
    {
      "type": "range",
      "id": "slide_duration",
      "min": 2,
      "max": 10,
      "step": 1,
      "unit": "s",
      "label": "Time between announcements",
      "default": 5
    }
  ],
  "blocks": [
    {
      "type": "announcement",
      "name": "Announcement",
      "settings": [
        {
          "type": "text",
          "id": "announcement_text",
          "label": "Announcement Text",
          "default": "Free shipping on orders over $50"
        },
        {
          "type": "url",
          "id": "announcement_url",
          "label": "Link (Optional)"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Announcement Bar",
      "category": "Header"
    }
  ]
}
{% endschema %}
